<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pw.adithya.jammbanking.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cvAcc"
            android:layout_weight="1"
            android:onClick="cvAcc"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:contentPadding="20dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true" />

                <ImageView
                    android:id="@+id/ivBank"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.2"
                    android:src="@drawable/bank"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cvAcc2"
            android:layout_weight="1"
            android:onClick="cvAcc2"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:contentPadding="20dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvAcc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true" />

                <ImageView
                    android:id="@+id/ivAcc2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.2"
                    android:src="@drawable/bank"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cvMoney"
            android:layout_weight="1"
            android:onClick="cvMoney"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:contentPadding="20dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/ivMoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.2"
                    android:src="@drawable/money"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:text="Transfer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/transferButton"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="transferClick"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>